<!DOCTYPE html>
<html lang="en">
<head>
    <%= csrf_meta_tag %>
    
    <title>Simple CMS Admin </title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
</head>
<body>
    <div id="header">
        <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
        <% if !flash[:notice].blank? %>
            <div class="notice">
                <%= flash[:notice] %>
            </div>
        <% end %>   
        <div id="content">
            <%= yield %>
        </div>
    </div>
    <div id="footer">
        <p id="copyright">&copy; ced.com</p>
    </div>
</body>
</html>