


<%= link_to("<< Back to list", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>
<div class="sections show">
    <h2>Show Section</h2>
    <table summary="Section detail view">
        <tr>
            <th>Page ID</th>
            <td><%= @section.page_id %></td>
        </tr>

        <tr>
            <th>Name</th>
            <td><%= @section.name %></td>
        </tr>   

         <tr>
            <th>Position</th>
            <td><%= @section.position %></td>
        </tr>

        <tr>
            <th>Visible?</th>
            <td>
                <%= @section.visible ? 'True' : 'False' %>
            </td>
        </tr>

        <tr>
            <th>Content Type</th>
            <td>
                <%= @section.content_type %>
            </td>
        </tr>

        <tr>
            <th>Content</th>
            <td>
                <%= @section.content %>
            </td>
        </tr>
        
        <tr>
            <th>Created</th>
            <td><%= format_date(@section.created_at)%></td>
        </tr>
            
        <tr>
            <th>Updated</th>
            <td><%= format_date(@section.updated_at)  %></td>
        </tr>
      

    </table>
</div>