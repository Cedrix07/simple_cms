
<div class="users index">
    <h2>Users</h2>

    <table class="listing" summary="Subject list">
        <tr class="header">
            <th>id</th>
            <th>first name</th>
            <th>Last name</th>
            <th>Email</th>  
            <th>Username</th>
            <th>Actions</th>
        </tr>

        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td class="actions">
                    <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
                    <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
                </td>
            </tr>
        <% end %>

    </table>
    <div>   
        <p>Total User Found: <strong><%= pluralize(@users.size, 'user')%> </strong></p>
    </div>
</div>