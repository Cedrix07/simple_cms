
<%= link_to("<< Back to list", {:action => 'index'}, :class => 'back-link') %>
<div class="subjects show">
    <h2>Show PAGE</h2>
    <table summary="Subject detail view">
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>

        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>

       <tr>
            <th>permalink</th>
            <td><%= @page.permalink %></td>
        </tr>

        <tr>
            <th>Visible?</th>
            <td><%= @page.visible ? 'True' : 'False' %></td>
        </tr>

        <tr>
            <th>Created</th>
            <td><%= format_date(@page.created_at) %></td>
        </tr>
            
        <tr>
            <th>Updated</th>
            <td><%= format_date(@page.updated_at) %></td>
        </tr>
      

    </table>
</div>
